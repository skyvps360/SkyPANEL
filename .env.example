# SkyPANEL Environment Configuration
# Copy this file to .env and configure with your settings

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3333

# Session security - generate a strong random string
SESSION_SECRET=your_secure_random_session_secret_here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL database connection URL
DATABASE_URL=postgresql://username:password@localhost:5432/skypanel

# ==============================================
# VIRTFUSION INTEGRATION (REQUIRED)
# ==============================================
# Your VirtFusion API URL and key
VIRTFUSION_API_URL=https://your-virtfusion.com/api/v1
VIRTFUSION_API_KEY=your_virtfusion_api_key

# ==============================================
# AI INTEGRATION (REQUIRED FOR AI FEATURES)
# ==============================================
# Google Gemini AI API keys (both are required)
GOOGLE_AI_API_KEY=your_google_gemini_api_key
GEMINI_API_KEY=your_google_gemini_api_key

# ==============================================
# EMAIL SERVICE (REQUIRED)
# ==============================================
# SMTP2GO configuration for email delivery
SMTP2GO_API_KEY=your_smtp2go_api_key
SMTP_FROM=noreply@your-domain.com
SMTP_FROM_NAME=Your Company Support

# ==============================================
# PAYPAL INTEGRATION (OPTIONAL)
# ==============================================
# PayPal configuration for payment processing
VITE_PAYPAL_SANDBOX=true
VITE_PAYPAL_SANDBOX_CLIENT_ID=your_paypal_sandbox_client_id
VITE_PAYPAL_SANDBOX_SECRET=your_paypal_sandbox_secret
VITE_PAYPAL_CLIENT_ID=your_paypal_live_client_id
VITE_PAYPAL_SECRET=your_paypal_live_secret
VITE_PAYPAL_CURRENCY=USD

# ==============================================
# DISCORD INTEGRATION (OPTIONAL)
# ==============================================
# Discord bot and webhook configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_CHANNEL_ID=your_discord_channel_id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
DISCORD_ROLE_ID=your_discord_role_id_for_mentions
DISCORD_ALLOWED_ROLE_IDS=role_id_1,role_id_2,role_id_3
DISCORD_ALLOWED_USER_IDS=user_id_1,user_id_2,user_id_3

# ==============================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==============================================
# BetterStack monitoring integration
BETTERSTACK_API_KEY=your_betterstack_api_key

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=your_google_analytics_tracking_id

# ==============================================
# OAUTH SSO PROVIDERS (OPTIONAL)
# ==============================================
# Discord OAuth
OAUTH_DISCORD_CLIENT_ID=your_discord_oauth_client_id
OAUTH_DISCORD_CLIENT_SECRET=your_discord_oauth_client_secret

# GitHub OAuth
OAUTH_GITHUB_CLIENT_ID=your_github_oauth_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=your_google_oauth_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# LinkedIn OAuth
OAUTH_LINKEDIN_CLIENT_ID=your_linkedin_oauth_client_id
OAUTH_LINKEDIN_CLIENT_SECRET=your_linkedin_oauth_client_secret

# ==============================================
# CLOUDFLARE WORKERS (OPTIONAL)
# ==============================================
# Cloudflare configuration for Workers deployment
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ==============================================
# ADDITIONAL SERVICES (OPTIONAL)
# ==============================================
# SendGrid (alternative email service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM=noreply@your-domain.com

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ==============================================
# SECURITY SETTINGS
# ==============================================
# JWT settings (if using JWT tokens)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1h

# Rate limiting settings
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Max requests per window

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Debug settings (development only)
DEBUG=skypanel:*
LOG_LEVEL=debug

# Disable certain features in development
DISABLE_EMAIL_SENDING=false
DISABLE_WEBHOOKS=false
DISABLE_AI_FEATURES=false

# ==============================================
# NOTES
# ==============================================
# 1. Required variables are marked as (REQUIRED) above
# 2. Optional variables can be left empty if not using those features
# 3. Generate secure random strings for secrets:
#    - Use: openssl rand -base64 32
#    - Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# 4. For production, ensure all secrets are properly secured
# 5. Never commit this file with real credentials to version control